@model IEnumerable<UserDto>

<form>
    <div class="container row">
        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="p-0 my-3 border rounded">
                    <div class="card text-white bg-primary mb-3" style="max-width: 20rem">
                        <h3 class="card-title text-white-50 text-center py-2">@item.Name</h3>
                        <span class="badge bg-secondary text-white p-2">@item.PhoneNumber</span>
                        <div class="card-body">
                            <div class="d-flex justify-content-between py-2">
                                <span style="font-size:20px;">@item.Email</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>


