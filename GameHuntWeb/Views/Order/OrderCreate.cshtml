@model OrderDto
<form asp-action="OrderCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Create Order</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Order Title</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="title" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Genre</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="genre" class="form-control"/>
                <span asp-validation-for="genre" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Salary</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="salary" class="form-control" type="decimal" />
                <span asp-validation-for="salary" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="description" class="form-control" rows ="5"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Count Of Developers</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="count_devs" class="form-control" />
                <span asp-validation-for="count_devs" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Gameplay Time</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="gameplay_time" class="form-control" />
                <span asp-validation-for="gameplay_time" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Platform</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="platform" class="form-control" />
                <span asp-validation-for="platform" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Deadline</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="deadline" class="form-control" />
                <span asp-validation-for="deadline" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Work Condition</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="work_condition" class="form-control" />
                <span asp-validation-for="work_condition" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Job Title</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="job_title" class="form-control" />
                <span asp-validation-for="job_title" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">

                <a asp-action="ClientOrders" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>

